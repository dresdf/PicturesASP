@model PicturesASP.Models.Folder
@{
    ViewData["Title"] = "Upload";
}

<h2>Upload</h2>

<form asp-action="Upload" asp-controller="Home" method="post" enctype="multipart/form-data">
    <input id="current-folder" asp-for="CurrentFolder" value="@Model.CurrentFolder" hidden /><br />
    <input type="file" id="files" aria-label="Upload photo" name="files" required multiple accept="image/*" />
    <input type="submit" data-progress="Uploading..." id="btnfiles" value="Upload photos" />
</form>

